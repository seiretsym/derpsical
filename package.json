  "dependencies": {
    "bcrypt": "^3.0.6",
    "express": "^4.17.1",
    "mongoose": "^5.7.7",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "if-env": "^1.0.4"
  }
}
